<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPagerA"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            tools:layout_width="160dp"
            tools:layout_gravity="center_horizontal"
            tools:background="@drawable/circle_tertiary"
            />

        <LinearLayout
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <com.fuzz.indicator.CutoutViewIndicator
                android:id="@+id/cutoutViewIndicatorA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                app:rcv_drawable="@drawable/rectangle_accent"
                app:rcv_internal_margin="0dp"
                app:rcv_tools_indicator_count="7"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="matrix"
                    app:layout_rcv_drawable="@drawable/rectangle_accent"
                    app:layout_rcv_drawable_unselected="@drawable/rectangle_secondary"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="matrix"
                    app:layout_rcv_drawable="@drawable/rectangle_accent"
                    app:layout_rcv_drawable_unselected="@drawable/rectangle_secondary"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="matrix"
                    app:layout_rcv_drawable="@drawable/rectangle_accent"
                    app:layout_rcv_drawable_unselected="@drawable/rectangle_secondary"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="matrix"
                    app:layout_rcv_drawable="@drawable/inset_circle_accent"
                    app:layout_rcv_drawable_unselected="@drawable/circle_tertiary"
                    />

            </com.fuzz.indicator.CutoutViewIndicator>

            <com.fuzz.indicator.CutoutViewIndicator
                android:id="@+id/cutoutViewIndicatorB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                app:rcv_drawable="@drawable/rectangle_accent"
                app:rcv_internal_margin="0dp"
                app:rcv_tools_indicator_count="7"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="matrix"
                    app:layout_rcv_drawable="@drawable/inset_circle_accent"
                    app:layout_rcv_drawable_unselected="@drawable/circle_tertiary"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="matrix"
                    app:layout_rcv_drawable="@drawable/rectangle_accent"
                    app:layout_rcv_drawable_unselected="@drawable/rectangle_secondary"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="matrix"
                    app:layout_rcv_drawable="@drawable/rectangle_accent"
                    app:layout_rcv_drawable_unselected="@drawable/rectangle_secondary"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="matrix"
                    app:layout_rcv_drawable="@drawable/rectangle_accent"
                    app:layout_rcv_drawable_unselected="@drawable/rectangle_secondary"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="matrix"
                    app:layout_rcv_drawable="@drawable/inset_circle_accent"
                    app:layout_rcv_drawable_unselected="@drawable/circle_tertiary"
                    />

            </com.fuzz.indicator.CutoutViewIndicator>

            <com.fuzz.indicator.CutoutViewIndicator
                android:id="@+id/cutoutViewIndicatorC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                app:rcv_drawable="@drawable/rectangle_accent"
                app:rcv_internal_margin="0dp"
                app:rcv_tools_indicator_count="7"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="matrix"
                    app:layout_rcv_drawable="@drawable/rectangle_accent"
                    app:layout_rcv_drawable_unselected="@drawable/rectangle_secondary"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="matrix"
                    app:layout_rcv_drawable="@drawable/rectangle_accent"
                    app:layout_rcv_drawable_unselected="@drawable/rectangle_secondary"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="matrix"
                    app:layout_rcv_drawable="@drawable/inset_circle_accent"
                    app:layout_rcv_drawable_unselected="@drawable/circle_tertiary"
                    />

            </com.fuzz.indicator.CutoutViewIndicator>

        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPagerB"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            tools:layout_width="160dp"
            tools:layout_gravity="center_horizontal"
            tools:background="@drawable/circle_secondary"
            />

        <LinearLayout
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <com.fuzz.indicator.CutoutViewIndicator
                android:id="@+id/cutoutViewIndicatorD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                app:rcv_drawable="@color/colorAccent"
                app:rcv_drawable_unselected="@android:color/white"
                app:rcv_internal_margin="0dp"
                app:rcv_tools_indicator_count="9"
                app:rcv_height="20dp"
                app:rcv_width="30dp"
                app:rcv_generator_text_mask="*%d*"
                app:rcv_generator_class_name="com.fuzz.indicator.clip.SequentialCellGenerator"
                />

            <com.fuzz.indicator.CutoutViewIndicator
                android:id="@+id/cutoutViewIndicatorE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                app:rcv_drawable="@drawable/white_circle"
                app:rcv_drawable_unselected="@drawable/white_circle_stroke_only"
                app:rcv_internal_margin="5dp"
                app:rcv_tools_indicator_count="9"
                />

            <com.fuzz.indicator.CutoutViewIndicator
                android:id="@+id/cutoutViewIndicatorF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                app:rcv_drawable="@color/colorAccent"
                app:rcv_drawable_unselected="@color/colorSecondary"
                app:rcv_width="20dp"
                app:rcv_height="20dp"
                app:rcv_internal_margin="5dp"
                app:rcv_tools_indicator_count="9"
                app:rcv_generator_class_name="com.fuzz.indicator.clip.SequentialCellGenerator"
                app:rcv_generator_text_mask="~"
                >

                <com.fuzz.indicator.widget.TextClippedImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:scaleType="matrix"
                    app:layout_rcv_drawable="@color/colorAccent"
                    app:layout_rcv_drawable_unselected="@color/colorSecondary"
                    app:layout_rcv_cell_length="20dp"
                    app:layout_rcv_perpendicular_length="20dp"
                    app:clip_text_mask="C"
                    />

                <com.fuzz.indicator.widget.TextClippedImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="matrix"
                    app:layout_rcv_drawable="@color/colorAccent"
                    app:layout_rcv_drawable_unselected="@color/colorSecondary"
                    app:layout_rcv_cell_length="20dp"
                    app:layout_rcv_perpendicular_length="20dp"
                    app:clip_text_mask="V"
                    />

                <com.fuzz.indicator.widget.TextClippedImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="matrix"
                    app:layout_rcv_drawable="@color/colorAccent"
                    app:layout_rcv_drawable_unselected="@color/colorSecondary"
                    app:layout_rcv_cell_length="20dp"
                    app:layout_rcv_perpendicular_length="20dp"
                    app:clip_text_mask="I"
                    />

            </com.fuzz.indicator.CutoutViewIndicator>

        </LinearLayout>
    </FrameLayout>

</LinearLayout>
